#include<iostream>
using namespace std;

int min(int a[],int size)
{
    int minimum=INT_MAX;
    for(int i=0;i<size;i++)
    {
        if(a[i]<minimum)
        minimum=a[i];
    }
    return minimum;
}

int main()
{
    int a[]={2,4,1,6,8,9,0};
    int size=7;
    int minimum=min(a,size);
    cout<<"MINIMUM NUMBER IS : "<<minimum<<endl;
}
