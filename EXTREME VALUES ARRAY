#include<iostream>
using namespace std;

void extreme(int a[],int size)
{
    for(int i=0;i<=(size-i-1);i++)
    {
        if(i<(size-i-1))
        cout<<a[i]<<" "<<a[size-1-i]<<" ";
        else
        cout<<a[i];
    }
}

int main()
{
    int a[]={2,4,1,6,8,9};
    int size=6;
    cout<<"EXTREME NO PRINTING ARRAY IS: ";
    extreme(a,size);
}

OUTPUT::
2 9 4 8 1 6




#include<iostream>
using namespace std;

void ext(int a[],int size)
{
    int start=0;
    int end=size-1;
    while(start<=end)
    {
        if(start<(size-start-1))
        cout<<a[start]<<" "<<a[size-1-start]<<" ";
        else
        cout<<a[start];
        start++;
        end--;
    }
}

int main()
{
    int a[]={2,4,1,6,8,9};
    int size=6;
    cout<<"EXTREME NO PRINTING ARRAY IS: ";
    ext(a,size);
}

OUTPUT::
2 9 4 8 1 6
