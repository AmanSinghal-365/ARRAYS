#include<iostream>
using namespace std;

int main()
{
    int b[3][3];
    cout<<"ENTER ARRAY :: "<<endl;
    for(int r=0;r<3;r++)
    {
        for(int c=0;c<3;c++)
        {
            cin>>b[r][c];
        }
    }
    cout<<"SUM PRINT ROW WISE :: ";
    for(int r=0;r<3;r++)
    {
        int sum=0;
        for(int c=0;c<3;c++)
        {
            sum+=b[r][c];            
        }
        cout<<sum<<" ";
    }
    cout<<endl;

    cout<<"SUM PRINT COLUMN WISE :: ";
    for(int r=0;r<3;r++)
    {
        int sum=0;
        for(int c=0;c<3;c++)
        {
            sum+=b[c][r];            
        }
        cout<<sum<<" ";
    }
    cout<<endl;

}

OUTPUT::

ENTER ARRAY :: 
1 2 3
4 5 6
7 8 9
SUM PRINT ROW WISE :: 6 15 24 
SUM PRINT COLUMN WISE :: 12 15 18 
